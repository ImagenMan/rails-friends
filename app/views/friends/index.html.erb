<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover" >
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
      <th> </th>
    </tr>
  </thead>

<tbody>
  <% @friends.each do |friend| %>
  <% if friend.user == current_user%>
    <tr>
      <td>
      <%= link_to friend.first_name + " " + friend.last_name, friend %>
        
      </td>
      <td><%= friend.email %></td>   
      <td><%= friend.phone %></td>    
      <td><%= friend.facebook %></td>
      <td><%= button_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
    </tr> 
    <% end %>                                            
    <% end %>
</tbody>
</table>

<br>
<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
<button type="button" class="btn btn-secondary">Secondary</button>

<% else%>
<h1>Welcome to my friends app</h1>
<h4>built with Ruby on Rails</h4>
<%= image_tag("ror", :alt => "rss feed", :width =>"300px") %> 
<% end %>